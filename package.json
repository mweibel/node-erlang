{
  "name": "node-erlang",
  "version": "0.0.1",
  "description": "Node.js Erlang client",
  "homepage": "https://github.com/mweibel/node-epmd-client",
  "bugs": "https://github.com/mweibel/node-epmd-client/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/mweibel/node-epmd-client.git"
  },
  "main": "index.js",
  "scripts": {
    "lint": "standard",
    "test": "mocha -R spec test --bail",
    "coverage": "babel-node ./node_modules/istanbul/lib/cli.js cover _mocha --bail --report lcovonly -- -R spec",
    "coveralls": "cat ./coverage/lcov.info | coveralls -v"
  },
  "keywords": [
    "erlang",
    "distribution",
    "networking",
    "cluster",
    "tcp"
  ],
  "author": "Michael Weibel <michael.weibel@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "chai": "^3.5.0",
    "coveralls": "^2.11.2",
    "cz-conventional-changelog": "^1.1.6",
    "debug": "^2.1.3",
    "env-test": "^1.0.0",
    "eslint": "^2.8.0",
    "eslint-config-standard": "^5.2.0",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-standard": "^1.3.2",
    "istanbul": "^0.4.3",
    "mocha": "^2.4.5",
    "mocha-lcov-reporter": "1.2.0",
    "sinon": "^1.17.3",
    "standard": "^6.0.8"
  },
  "dependencies": {
    "bit-buffer": "0.0.3",
    "epmd-client": "0.0.2",
    "erlang": "mweibel/erlang.js#new-master",
    "erlang-term-format": "^1.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
